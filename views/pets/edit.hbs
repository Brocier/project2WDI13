<div>
  <h3>Pet Edit Page</h3>
</div>


<div>
  <form action="/users/{{user._id}}/pets/{{pet._id}}?_method=PUT" method="POST">
    <div>
      <label for="name">Name</label>
      <input type="text" name="name" value="{{pet.name}}" />
    </div>
    <div>
      <label for="age">Age</label>
      <input type="number" name="age" value="{{pet.age}}" />
    </div>

    <div>
      <input type="submit" value="Save Pet">
    </div>
  </form>
</div>