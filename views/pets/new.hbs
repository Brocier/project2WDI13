<div>
  <h1>New Pet</h1>
</div>
<div>
  <form action="/users/{{userId}}/pets" method="POST">
    <div>
      <label for="name">Name</label>
      <input type="text" name="name" required/>
    </div>
    <div>
      <label for="age">Age</label>
      <input type="number" name="age" required/>
    </div>

    <div>
      <input type="submit" value="Save Pet">
    </div>
  </form>
</div>